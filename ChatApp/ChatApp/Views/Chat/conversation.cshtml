        // React to message via SignalR
        function reactMessageViaSignalR(messageId, reactionType) {
            if (!connection || connection.state !== signalR.HubConnectionState.Connected) {
                alert("Chưa kết nối đến server!");
                return;
            }

            connection.invoke("ReactToMessage", messageId, reactionType)
                .catch(err => {
                    console.error("React error:", err);
                    alert("Không thể thả reaction!");
                });
        }

        // Edit message via SignalR
        function editMessageViaSignalR(messageId) {
            const messageWrapper = $(`.message-wrapper[data-message-id="${messageId}"]`);
            const messageBubble = messageWrapper.find('.message-bubble').clone();
            messageBubble.find('.message-actions').remove();
            messageBubble.find('i.fa-thumbtack').remove();
            const currentText = messageBubble.text().trim().replace('(đã chỉnh sửa)', '').trim();

            const newText = prompt('Chỉnh sửa tin nhắn:', currentText);

            if (newText && newText !== currentText) {
                if (!connection || connection.state !== signalR.HubConnectionState.Connected) {
                    alert("Chưa kết nối đến server!");
                    return;
                }

                connection.invoke("EditMessage", messageId, newText)
                    .catch(err => {
                        console.error("Edit error:", err);
                        alert("Không thể chỉnh sửa tin nhắn!");
                    });
            }
        }

        // Delete message via SignalR
        function deleteMessageViaSignalR(messageId) {
            if (!confirm('Bạn có chắc muốn thu hồi tin nhắn này?')) return;

            if (!connection || connection.state !== signalR.HubConnectionState.Connected) {
                alert("Chưa kết nối đến server!");
                return;
            }

            connection.invoke("DeleteMessage", messageId)
                .catch(err => {
                    console.error("Delete error:", err);
                    alert("Không thể xóa tin nhắn!");
                });
        }


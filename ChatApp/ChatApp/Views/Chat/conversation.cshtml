@{
    ViewData["Title"] = "Cuộc hội thoại";

    var conversation = ViewBag.Conversation as ChatApp.Models.Conversation;
    var messages = ViewBag.Messages as List<dynamic>;
    var currentUserId = ViewBag.CurrentUserId;
    var isAdmin = ViewBag.IsAdmin == true;

    // Tính toán display name + avatar (giống như cũ)
    string displayName = conversation.ConversationName ?? "";
    string avatarUrl = "/images/default-avatar.png";
    bool isOnline = false;

    if (conversation.IsGroup != true && conversation.ConversationMembers != null)
    {
        var other = conversation.ConversationMembers
            .FirstOrDefault(m => m.UserId != currentUserId && m.DeletedAt == null);
        if (other?.User != null)
        {
            displayName = other.User.FullName ?? other.User.Username ?? "Người dùng";
            avatarUrl = other.User.Avatar ?? "/images/default-avatar.png";
            isOnline = other.User.IsOnline == true;
        }
    }

    // Truyền để sidebar highlight đúng
    ViewBag.ActiveConversationId = conversation.ConversationId;
}

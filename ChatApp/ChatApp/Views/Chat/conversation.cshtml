            const pinIcon = messageBubble.find('i.fa-thumbtack');
            const messageActions = messageBubble.find('.message-actions');

            messageBubble.html('');
            if (pinIcon.length > 0) {
                messageBubble.append(pinIcon);
            }
            messageBubble.append(document.createTextNode(data.newText));
            if (messageActions.length > 0) {
                messageBubble.append(messageActions);
            }

            messageBubble.addClass('edited');
        }


<div class="chat-container">
    <!-- Left: Conversations List -->
    @await Html.PartialAsync("_ConversationsPanel")

    <!-- Center: Chat Area -->
    <div class="chat-panel">
        <!-- Chat Header -->
        <div class="chat-header">
            <a href="@Url.Action("Index", "Chat")" class="chat-header-back">
                <i class="fas fa-arrow-left"></i>
            </a>

            <div class="chat-header-avatar">
                @if (conversation.IsGroup == true)
                {
                    <!-- ✅ Avatar cho nhóm -->
                    <div class="default-avatar" style="background: linear-gradient(135deg, #f59e0b 0%, #ef4444 100%);">
                        <i class="fas fa-users"></i>
                    </div>
                }
                else if (!string.IsNullOrEmpty(avatarUrl) && avatarUrl != "/images/default-avatar.png")
                {
                    <img src="@avatarUrl" alt="@displayName">
                }
                else
                {
                    <div class="default-avatar">
                        @displayName.Substring(0, 1).ToUpper()
                    </div>
                }
            </div>

            <div class="chat-header-info">
                <div class="chat-header-name">@displayName</div>
                <div class="chat-header-status @(isOnline ? "online" : "")">
                    @if (conversation.IsGroup == true)
                    {
                        <span>@conversation.ConversationMembers.Count(m => m.DeletedAt == null) thành viên</span>
                    }
                    else
                    {
                        <span>@(isOnline ? "Đang hoạt động" : "Không hoạt động")</span>
                    }
                </div>
            </div>

            <div class="chat-header-actions">
                <button class="chat-header-btn" id="callBtn" title="Gọi điện">
                    <i class="fas fa-phone"></i>
                </button>
                <button class="chat-header-btn" id="videoCallBtn" title="Gọi video">
                    <i class="fas fa-video"></i>
                </button>
                <button class="chat-header-btn" id="searchMsgBtn" title="Tìm kiếm">
                    <i class="fas fa-search"></i>
                </button>
                <button class="chat-header-btn" id="toggleInfoBtn" title="Thông tin">
                    <i class="fas fa-info-circle"></i>
                </button>
            </div>
        </div>

        <!-- Pinned Messages Banner -->
        @{
            var pinnedMessages = messages?.Where(m => m.IsPinned == true).ToList();
            if (pinnedMessages != null && pinnedMessages.Count > 0)
            {
                var pinnedMsg = pinnedMessages.First();
                <div class="pinned-message-banner" onclick="scrollToMessage(@pinnedMsg.MessageId)">
                    <div>
                        <i class="fas fa-thumbtack"></i>
                        <span class="pinned-message-text">@pinnedMsg.MessageText</span>
                    </div>
                    <i class="fas fa-chevron-down"></i>
                </div>
            }
        }

        <!-- Messages Area -->
        <div class="messages-area" id="messagesArea">
            @if (messages != null && messages.Count > 0)
            {
                DateTime? lastDate = null;

                foreach (var msg in messages)
                {
                    var msgDate = ((DateTime)msg.SentAt).Date;

                    // Date divider
                    if (lastDate == null || msgDate != lastDate)
                    {
                        <div class="message-date-divider">
                            <span>
                                @if (msgDate == DateTime.Today)
                                {
                                    @:Hôm nay
                                }
                                else if (msgDate == DateTime.Today.AddDays(-1))
                                {
                                    @:Hôm qua
                                }
                                else
                                {
                                    @msgDate.ToString("dd/MM/yyyy")
                                }
                            </span>
                        </div>
                        lastDate = msgDate;
                    }

                    var isSent = msg.Sender.UserId == currentUserId;
                    var senderName = msg.Sender.FullName ?? msg.Sender.Username ?? "Unknown";
                    var senderAvatar = msg.Sender.Avatar ?? "/images/default-avatar.png";
                    var sentTime = ((DateTime)msg.SentAt).ToString("HH:mm");

                    <div class="message-wrapper @(isSent ? "sent" : "received")" data-message-id="@msg.MessageId">
                        @* ✅ FIX: Hiển thị avatar cho messages từ người khác trong nhóm *@
                        @if (!isSent && conversation.IsGroup == true)
                        {
                            <div class="message-avatar">
                                @* ✅ QUAN TRỌNG: Kiểm tra avatar có hợp lệ không *@
                                @if (!string.IsNullOrEmpty(senderAvatar) &&
                               senderAvatar != "/images/default-avatar.png" &&
                               !senderAvatar.Trim().Equals(""))
                                {
                                    <img src="@senderAvatar" alt="@senderName">
                                }
                                else
                                {
                                    @* Default avatar với chữ cái đầu *@
                                    <div style="width: 32px; height: 32px; border-radius: 50%;
                                        background: linear-gradient(135deg, #667eea 0%, #7dc1f2 100%);
                                        display: flex; align-items: center; justify-content: center;
                                        color: white; font-size: 14px; font-weight: 600;">
                                        @senderName.Substring(0, 1).ToUpper()
                                    </div>
                                }
                            </div>
                        }

                        <div class="message-content">
                            @if (!isSent && conversation.IsGroup == true)
                            {
                                <div class="message-sender-name">@senderName</div>
                            }

                            <div class="message-bubble @(msg.IsEdited ? "edited" : "")">
                                @if (msg.IsPinned == true)
                                {
                                    <i class="fas fa-thumbtack" style="margin-right: 6px; font-size: 12px;"></i>
                                }
                                @msg.MessageText

                                @if (isSent)
                                {
                                    <div class="message-actions">
                                        <button class="message-action-btn" onclick="reactMessageViaSignalR(@msg.MessageId, '👍')">
                                            <i class="far fa-thumbs-up"></i>
                                        </button>
                                        <button class="message-action-btn" onclick="editMessageViaSignalR(@msg.MessageId)">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button class="message-action-btn" onclick="deleteMessageViaSignalR(@msg.MessageId)">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                }
                            </div>

                            <div class="message-meta">
                                <span>@sentTime</span>
                                @if (isSent)
                                {
                                    <i class="fas fa-check-double" style="color: #0068ff;"></i>
                                }
                            </div>

                            @* ✅ Reactions container - sẽ được load qua JavaScript *@
                            <div class="message-reactions" data-message-id="@msg.MessageId"></div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div style="text-align: center; padding: 40px; color: #9ca3af;">
                    <i class="fas fa-comments" style="font-size: 48px; margin-bottom: 12px; color: #d1d5db;"></i>
                    <p>Chưa có tin nhắn nào</p>
                    <p style="font-size: 13px; margin-top: 8px;">Hãy bắt đầu cuộc trò chuyện!</p>
                </div>
            }
        </div>

        <!-- Chat Input -->
        <div class="chat-input">
            <form id="messageForm" class="chat-input-container">
                <div class="input-actions">
                    <button type="button" class="input-action-btn" id="attachImageBtn" title="Gửi ảnh">
                        <i class="fas fa-image"></i>
                    </button>
                    <button type="button" class="input-action-btn" id="attachFileBtn" title="Gửi file">
                        <i class="fas fa-paperclip"></i>
                    </button>
                    <button type="button" class="input-action-btn" id="voiceBtn" title="Ghi âm">
                        <i class="fas fa-microphone"></i>
                    </button>
                </div>

                <div class="input-wrapper">
                    <textarea id="messageInput"
                              class="chat-input-field"
                              placeholder="Nhập tin nhắn..."
                              rows="1"></textarea>
                    <button type="button" class="emoji-picker-btn" id="emojiBtn">
                        <i class="far fa-smile"></i>
                    </button>
                </div>

                <button type="submit" class="send-btn" id="sendBtn">
                    <i class="fas fa-paper-plane"></i>
                </button>

                <input type="hidden" id="conversationId" value="@conversation.ConversationId">
            </form>
        </div>
    </div>

    <!-- Right: Info Panel -->
    <div class="info-panel" id="infoPanel">
        <div class="info-header">
            <div class="info-avatar">
                @if (conversation.IsGroup == true)
                {
                    <!-- ✅ Avatar cho nhóm trong info panel -->
                    <div style="width: 80px; height: 80px; border-radius: 50%; background: linear-gradient(135deg, #f59e0b 0%, #ef4444 100%); display: flex; align-items: center; justify-content: center; color: white; font-size: 32px;">
                        <i class="fas fa-users"></i>
                    </div>
                }
                else if (!string.IsNullOrEmpty(avatarUrl) && avatarUrl != "/images/default-avatar.png")
                {
                    <img src="@avatarUrl" alt="@displayName">
                }
                else
                {
                    <div class="default-avatar" style="width: 100%; height: 100%; border-radius: 50%; background: linear-gradient(135deg, #667eea 0%, #7dc1f2 100%); display: flex; align-items: center; justify-content: center; color: white; font-size: 32px; font-weight: 600;">
                        @displayName.Substring(0, 1).ToUpper()
                    </div>
                }
            </div>
            <div class="info-name">@displayName</div>
            <div class="info-status">
                @if (conversation.IsGroup == true)
                {
                    <span>Nhóm · @conversation.ConversationMembers.Count(m => m.DeletedAt == null) thành viên</span>
                }
                else
                {
                    <span>@(isOnline ? "Đang hoạt động" : "Không hoạt động")</span>
                }
            </div>

            <div class="info-actions">
                <button class="info-action-btn" onclick="muteConversation(@conversation.ConversationId)">
                    <i class="fas fa-bell-slash"></i>
                    <span>Tắt thông báo</span>
                </button>
                <button class="info-action-btn" onclick="pinConversation(@conversation.ConversationId)">
                    <i class="fas fa-thumbtack"></i>
                    <span>Ghim</span>
                </button>
                <button class="info-action-btn">
                    <i class="fas fa-search"></i>
                    <span>Tìm kiếm</span>
                </button>
            </div>
        </div>

        <div class="info-section">
            <div class="info-section-header">Tuỳ chỉnh</div>
            <div class="info-item" onclick="archiveConversation(@conversation.ConversationId)">
                <i class="fas fa-archive"></i>
                <div class="info-item-content">
                    <div class="info-item-title">Lưu trữ hội thoại</div>
                </div>
            </div>
            <div class="info-item" onclick="deleteConversation(@conversation.ConversationId)">
                <i class="fas fa-trash" style="color: #ef4444;"></i>
                <div class="info-item-content">
                    <div class="info-item-title" style="color: #ef4444;">Xóa hội thoại</div>
                </div>
            </div>
        </div>

        @if (conversation.IsGroup == true)
        {
            <div class="info-section">
                <div class="info-section-header">Thành viên (@conversation.ConversationMembers.Count(m => m.DeletedAt == null))</div>
                @foreach (var member in conversation.ConversationMembers.Where(m => m.DeletedAt == null))
                {
                    var memberAvatar = member.User?.Avatar ?? "/images/default-avatar.png";
                    var memberName = member.User?.FullName ?? member.User?.Username ?? "Unknown";
                    var memberIsAdmin = member.IsAdmin ?? false;

                    <div class="info-item">
                        <div class="conversation-avatar" style="width: 40px; height: 40px; margin-right: 12px;">
                            @if (!string.IsNullOrEmpty(memberAvatar) && memberAvatar != "/images/default-avatar.png")
                            {
                                <img src="@memberAvatar" alt="@memberName">
                            }
                            else
                            {
                                <div class="default-avatar">
                                    @memberName.Substring(0, 1).ToUpper()
                                </div>
                            }
                        </div>
                        <div class="info-item-content">
                            <div class="info-item-title">
                                @memberName
                                @if (memberIsAdmin)
                                {
                                    <span style="color: #f59e0b; font-size: 11px; margin-left: 6px;">Nhóm Trường</span>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.min.js"></script>

    <!-- ✅ IMPORT SHARED SEARCH FUNCTIONS -->
    <script src="~/js/chat-search.js"></script>

    <script>
        let conversationId = @conversation.ConversationId;
        let currentUserId = @currentUserId;
        let connection = null;
        let typingTimeout = null;
        let isTyping = false;
        let isGroupConversation = @(conversation.IsGroup == true ? "true" : "false");

        $(document).ready(function () {
            console.log('🚀 Conversation page initialized');
            console.log('ConversationId:', conversationId);
            console.log('CurrentUserId:', currentUserId);

            // ✅ Initialize shared search
            initializeSearch();

            // Initialize SignalR
            initializeSignalR();

            // Load reactions cho các messages có sẵn
            loadExistingReactions();

            // Auto-resize textarea
            $('#messageInput').on('input', function () {
                this.style.height = 'auto';
                this.style.height = (this.scrollHeight) + 'px';
                handleTyping();
            });

            // Toggle info panel
            $('#toggleInfoBtn').off('click').on('click', function (e) {
                e.preventDefault();
                e.stopPropagation();
                console.log('🖱️ Info button clicked!');
                $('#infoPanel').toggleClass('show');
                console.log('Panel has class "show":', $('#infoPanel').hasClass('show'));
            });

            // ✅ FIX: Send message on Enter - CHỈ XỬ LÝ 1 LẦN
            $('#messageInput').off('keydown').on('keydown', function (e) {
                if (e.key === 'Enter' && !e.shiftKey) {
                    e.preventDefault();
                    e.stopPropagation();
                    sendMessageViaSignalR();
                    return false;
                }
            });

            // ✅ FIX: Submit form - CHỈ XỬ LÝ 1 LẦN, KHÔNG GỌI API
            $('#messageForm').off('submit').on('submit', function (e) {
                e.preventDefault();
                e.stopPropagation();
                sendMessageViaSignalR();
                return false;
            });

            // ✅ FIX: Send button click - CHỈ XỬ LÝ 1 LẦN
            $('#sendBtn').off('click').on('click', function (e) {
                e.preventDefault();
                e.stopPropagation();
                sendMessageViaSignalR();
                return false;
            });

            // Mark as read when entering conversation
            setTimeout(function () {
                markAsRead();
            }, 500);

            // Auto scroll to bottom
            scrollToBottom();

            // Load conversations list
            loadConversationsList();

            initConversationsPanelEvents();

            // Create group button
            $('#createGroupBtn').off('click').on('click', function (e) {
                e.preventDefault();
                e.stopPropagation();
                console.log('🖱️ Create group button clicked from Conversation page');
                loadCreateGroupModal();
            });
        });


        // ========== SignalR Functions ==========

        function initializeSignalR() {
            connection = new signalR.HubConnectionBuilder()
                .withUrl("/chatHub")
                .withAutomaticReconnect()
                .build();

            // ReceiveMessage - Nhận tin nhắn mới
            connection.on("ReceiveMessage", function (data) {
                console.log("✉️ Received message:", data);

                // Chỉ add message nếu đang ở conversation này
                if (data.conversationId === conversationId) {
                    addMessageToUI(data);
                    scrollToBottom();
                    markAsRead();
                }

                // ✅ Update conversation panel
                loadConversationsPanel();

                // Play notification sound if message from others
                if (data.sender.userId !== currentUserId && data.conversationId !== conversationId) {
                    playNotificationSound();
                }
            });

            // UserTyping - Hiển thị typing indicator
            connection.on("UserTyping", function (data) {
                if (data.conversationId === conversationId && data.userId !== currentUserId) {
                    showTypingIndicator(data.fullName);
                }
            });

            // UserStoppedTyping - Ẩn typing indicator
            connection.on("UserStoppedTyping", function (data) {
                if (data.conversationId === conversationId) {
                    hideTypingIndicator();
                }
            });

            // MessageRead - Tin nhắn đã được đọc
            connection.on("MessageRead", function (data) {
                if (data.conversationId === conversationId && data.userId !== currentUserId) {
                    updateReadStatus();
                }
            });

            // UserStatusChanged - Trạng thái online/offline
            connection.on("UserStatusChanged", function (data) {
                updateUserStatus(data.userId, data.isOnline, data.lastSeen);
            });

            // ReactionUpdated - Reaction được cập nhật
            connection.on("ReactionUpdated", function (data) {
                if (data.conversationId === conversationId) {
                    updateReactionUI(data);
                }
            });

            // MessageEdited - Tin nhắn được chỉnh sửa
            connection.on("MessageEdited", function (data) {
                if (data.conversationId === conversationId) {
                    updateEditedMessage(data);
                }
            });

            // MessageDeleted - Tin nhắn bị xóa
            connection.on("MessageDeleted", function (data) {
                if (data.conversationId === conversationId) {
                    removeMessageFromUI(data.messageId);
                }
            });

            // Error handling
            connection.on("Error", function (message) {
                console.error("SignalR Error:", message);
                alert(message);
            });

            // Start connection
            connection.start()
                .then(function () {
                    console.log("✅ SignalR Connected!");
                    markAsRead();
                })
                .catch(function (err) {
                    console.error("❌ SignalR Connection Error:", err);
                    setTimeout(initializeSignalR, 5000);
                });

            // Reconnecting
            connection.onreconnecting(function () {
                console.log("🔄 SignalR Reconnecting...");
            });

            // Reconnected
            connection.onreconnected(function () {
                console.log("✅ SignalR Reconnected!");
                markAsRead();
                loadConversationsList();
            });

            // Disconnected
            connection.onclose(function () {
                console.log("❌ SignalR Disconnected!");
                setTimeout(initializeSignalR, 5000);
            });
        }

        // Load reactions cho các messages đã có sẵn khi page load
        function loadExistingReactions() {
            $('.message-wrapper').each(function () {
                const messageId = $(this).data('message-id');
                if (messageId) {
                    loadReactionsForMessage(messageId);
                }
            });
        }

        // ===== Load conversations panel =====
        function loadConversationsPanel() {
            $.ajax({
                url: '@Url.Action("LoadConversationsPanel", "Chat")',
                type: 'GET',
                data: { activeConversationId: conversationId },
                success: function (html) {
                    // ✅ QUAN TRỌNG: Thay thế toàn bộ panel, không chỉ list
                    $('.conversations-panel').replaceWith(html);

                    // Re-bind các events sau khi load
                    initConversationsPanelEvents();
                },
                error: function () {
                    console.error('Failed to load conversations panel');
                }
            });
        }

        // ===== Initialize panel events =====
        function initConversationsPanelEvents() {
            // ✅ Use shared search initialization
            initializeSearch();

            // Create group button
            $('#createGroupBtn').off('click').on('click', function (e) {
                e.preventDefault();
                e.stopPropagation();
                loadCreateGroupModal();
            });

            // Tab filtering
            $('.tab-btn').off('click').on('click', function () {
                $('.tab-btn').removeClass('active');
                $(this).addClass('active');
                var tab = $(this).data('tab');
                filterConversations(tab);
            });
        }

        // Load reactions cho 1 message cụ thể
        function loadReactionsForMessage(messageId) {
            $.ajax({
                url: '@Url.Action("GetMessageReactions", "Chat")',
                type: 'GET',
                data: { messageId: messageId },
                success: function (response) {
                    if (response.success && response.reactions && response.reactions.length > 0) {
                        updateMessageReactions(messageId, response.reactions);
                    }
                },
                error: function (xhr) {
                    console.error('Error loading reactions for message:', messageId, xhr);
                }
            });
        }

        // Cập nhật reactions UI cho message
        function updateMessageReactions(messageId, reactions) {
            const messageWrapper = $(`.message-wrapper[data-message-id="${messageId}"]`);
            const reactionsContainer = messageWrapper.find('.message-reactions');

            if (reactions && reactions.length > 0) {
                let html = '';
                reactions.forEach(function (r) {
                    const isMyReaction = r.userIds && r.userIds.includes(currentUserId);
                    html += `
                                <div class="reaction-item ${isMyReaction ? 'active' : ''}"
                                     onclick="reactMessageViaSignalR(${messageId}, '${r.reactionType}')">
                                    <span>${r.reactionType}</span>
                                    <span>${r.count}</span>
                                </div>
                            `;
                });
                reactionsContainer.html(html);
                reactionsContainer.show();
            } else {
                reactionsContainer.hide();
            }
        }

        // Send message via SignalR
        function sendMessageViaSignalR() {
            const messageText = $('#messageInput').val().trim();

            if (!messageText) {
                console.log('⚠️ Empty message, skipping...');
                return;
            }

            // ✅ QUAN TRỌNG: Kiểm tra nếu đang gửi thì KHÔNG gửi nữa
            if ($('#sendBtn').prop('disabled')) {
                console.log('⚠️ Already sending, skipping...');
                return;
            }

            console.log('📤 Sending message via SignalR:', messageText);

            // Disable send button NGAY LẬP TỨC
            $('#sendBtn').prop('disabled', true);
            $('#messageInput').prop('disabled', true);

            connection.invoke("SendMessage", conversationId, messageText)
                .then(function () {
                    console.log("✅ Message sent successfully");
                    $('#messageInput').val('');
                    $('#messageInput').css('height', 'auto');

                    // Enable lại sau 300ms để tránh spam
                    setTimeout(function () {
                        $('#sendBtn').prop('disabled', false);
                        $('#messageInput').prop('disabled', false);
                        $('#messageInput').focus();
                    }, 300);

                    // Stop typing indicator
                    if (isTyping) {
                        connection.invoke("UserStoppedTyping", conversationId);
                        isTyping = false;
                    }
                })
                .catch(function (err) {
                    console.error("❌ Send message error:", err);
                    alert("Không thể gửi tin nhắn. Vui lòng thử lại!");

                    // Enable lại ngay khi lỗi
                    $('#sendBtn').prop('disabled', false);
                    $('#messageInput').prop('disabled', false);
                });
        }

        // Handle typing indicator
        function handleTyping() {
            if (!isTyping && connection && connection.state === signalR.HubConnectionState.Connected) {
                isTyping = true;
                connection.invoke("UserTyping", conversationId).catch(err => console.error(err));
            }

            clearTimeout(typingTimeout);
            typingTimeout = setTimeout(function () {
                if (isTyping && connection && connection.state === signalR.HubConnectionState.Connected) {
                    connection.invoke("UserStoppedTyping", conversationId).catch(err => console.error(err));
                    isTyping = false;
                }
            }, 1000);
        }

        // Show typing indicator
        function showTypingIndicator(userName) {
            if ($('#typingIndicator').length === 0) {
                const html = `
                            <div id="typingIndicator" style="padding: 10px 20px; color: #6b7280; font-size: 13px; font-style: italic;">
                                <i class="fas fa-circle" style="font-size: 8px; animation: pulse 1.5s infinite;"></i>
                                <i class="fas fa-circle" style="font-size: 8px; animation: pulse 1.5s infinite 0.3s;"></i>
                                <i class="fas fa-circle" style="font-size: 8px; animation: pulse 1.5s infinite 0.6s;"></i>
                                ${userName} đang nhập...
                            </div>
                        `;
                $('#messagesArea').append(html);
                scrollToBottom();
            }
        }

        // Hide typing indicator
        function hideTypingIndicator() {
            $('#typingIndicator').remove();
        }

        // Mark as read
        function markAsRead() {
            if (connection && connection.state === signalR.HubConnectionState.Connected) {
                connection.invoke("MarkAsRead", conversationId).catch(err => console.error(err));
            }
        }

        // ========== UI Functions ==========

        // Add message to UI
        function addMessageToUI(msg) {
            const isSent = msg.sender.userId === currentUserId;
            const senderName = msg.sender.fullName || msg.sender.username || 'Unknown';
            const senderAvatar = msg.sender.avatar || '/images/default-avatar.png';
            const isGroup = isGroupConversation;

            console.log('📝 Adding message to UI:', {
                messageId: msg.messageId,
                isSent: isSent,
                isGroup: isGroup,
                senderName: senderName,
                senderAvatar: senderAvatar
            });

            let html = `
                <div class="message-wrapper ${isSent ? 'sent' : 'received'}" data-message-id="${msg.messageId}">
            `;

            // ✅ QUAN TRỌNG: Hiện avatar cho message từ người khác trong nhóm
            if (!isSent && isGroup) {
                console.log('👤 Rendering avatar for group message from:', senderName);

                // Kiểm tra avatar có hợp lệ không
                const hasValidAvatar = senderAvatar &&
                    senderAvatar.trim() !== '' &&
                    senderAvatar !== '/images/default-avatar.png';

                if (hasValidAvatar) {
                    // Có avatar thật
                    html += `
                        <div class="message-avatar">
                            <img src="${escapeHtml(senderAvatar)}"
                                 alt="${escapeHtml(senderName)}"
                                 onerror="this.style.display='none'; this.parentElement.innerHTML='<div style=\\'width:32px;height:32px;border-radius:50%;background:linear-gradient(135deg,#667eea,#7dc1f2);display:flex;align-items:center;justify-content:center;color:white;font-size:14px;font-weight:600;\\'>${escapeHtml(senderName).charAt(0).toUpperCase()}</div>';">
                        </div>
                    `;
                } else {
                    // Dùng default avatar với chữ cái đầu
                    const initial = senderName.charAt(0).toUpperCase();
                    html += `
                        <div class="message-avatar">
                            <div style="width: 32px; height: 32px; border-radius: 50%;
                                        background: linear-gradient(135deg, #667eea 0%, #7dc1f2 100%);
                                        display: flex; align-items: center; justify-content: center;
                                        color: white; font-size: 14px; font-weight: 600;">
                                ${initial}
                            </div>
                        </div>
                    `;
                }
            }

            html += `<div class="message-content">`;

            // Hiển thị tên người gửi nếu là nhóm và không phải tin nhắn của mình
            if (!isSent && isGroup) {
                html += `<div class="message-sender-name">${escapeHtml(senderName)}</div>`;
            }

            html += `
                <div class="message-bubble ${msg.isEdited ? 'edited' : ''}">
                    ${msg.isPinned ? '<i class="fas fa-thumbtack" style="margin-right: 6px; font-size: 12px;"></i>' : ''}
                    ${escapeHtml(msg.messageText)}
            `;

            // Chỉ hiện actions cho tin nhắn của mình
            if (isSent) {
                html += `
                    <div class="message-actions">
                        <button class="message-action-btn" onclick="reactMessageViaSignalR(${msg.messageId}, '👍')">
                            <i class="far fa-thumbs-up"></i>
                        </button>
                        <button class="message-action-btn" onclick="editMessageViaSignalR(${msg.messageId})">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button class="message-action-btn" onclick="deleteMessageViaSignalR(${msg.messageId})">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                `;
            }

            html += `
                </div>
                <div class="message-meta">
                    <span>${msg.sentAt}</span>
            `;

            if (isSent) {
                html += `<i class="fas fa-check-double" style="color: #0068ff;"></i>`;
            }

            html += `
                    </div>
                    <div class="message-reactions" data-message-id="${msg.messageId}"></div>
                </div>
            </div>
            `;

            $('#messagesArea').append(html);
            console.log('✅ Message added to UI successfully');
        }

